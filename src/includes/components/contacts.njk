<section class="contact section" id="contact">
    <div class="container">
        <h2 class="section__title">Contacts</h2>

        <div class="contact__grid">
            <!-- Owner Info -->
            <div class="card contact__owner">
                <h3 class="card__title">Owner Information</h3>
                <dl class="contact__details">
                    <div class="contact__detail">
                        <dt>Name</dt>
                        <dd>{{ data.owner.name | orNA }}</dd>
                    </div>
                    <div class="contact__detail">
                        <dt>Phone</dt>
                        <dd>
                            {% if data.owner.phone %}
                            <a href="tel:{{ data.owner.phone | telLink }}">
                                {{ data.owner.phone }}
                            </a>
                            {% else %}
                            N/A
                            {% endif %}
                        </dd>
                    </div>
                    <div class="contact__detail">
                        <dt>Email</dt>
                        <dd>
                            {% if data.owner.email %}
                            <a href="mailto:{{ data.owner.email }}">
                                {{ data.owner.email }}
                            </a>
                            {% else %}
                            N/A
                            {% endif %}
                        </dd>
                    </div>
                    {% if data.owner.address %}
                    <div class="contact__detail">
                        <dt>Address</dt>
                        <dd>{{ data.owner.address }}</dd>
                    </div>
                    {% endif %}
                </dl>

                {% if data.owner.notes %}
                <div class="contact__notes">
                    <span class="contact__notes-label">Notes</span>
                    <p>{{ data.owner.notes }}</p>
                </div>
                {% endif %}

                {% if data.owner.socials | length %}
                <div class="contact__social">
                    {% for link in data.owner.socials %}
                    <a href="{{ link.url }}" class="contact__social-link" target="_blank" rel="noopener noreferrer">
                        {{ link.name }}
                    </a>
                    {% endfor %}
                </div>
                {% endif %}
            </div>

            <!-- Emergency Contact -->
            {% if data.owner.emergencyContact %}
            <div class="card contact__emergency">
                <h3 class="card__title">Emergency Contact</h3>
                <dl class="contact__details">
                    <div class="contact__detail">
                        <dt>Name</dt>
                        <dd>{{ data.owner.emergencyContact.name | orNA }}</dd>
                    </div>
                    <div class="contact__detail">
                        <dt>Phone</dt>
                        <dd>
                            {% if data.owner.emergencyContact.phone %}
                            <a href="tel:{{ data.owner.emergencyContact.phone | telLink }}">
                                {{ data.owner.emergencyContact.phone }}
                            </a>
                            {% else %}
                            N/A
                            {% endif %}
                        </dd>
                    </div>
                    <div class="contact__detail">
                        <dt>Relationship</dt>
                        <dd>{{ data.owner.emergencyContact.relationship | orNA }}</dd>
                    </div>
                </dl>
            </div>
            {% endif %}
        </div>
    </div>
</section>
