<section class="about section" id="about">
    <div class="container">
        <h2 class="section__title">About</h2>

        <div class="about__grid">
            <!-- Basic Info Card -->
            <div class="card about__info">
                <h3 class="card__title">Basic Info</h3>
                <dl class="about__details">
                    <div class="about__detail">
                        <dt>Date of Birth</dt>
                        <dd>{{ data.pet.dob | formatDate | orNA }}</dd>
                    </div>
                    <div class="about__detail">
                        <dt>Breed</dt>
                        <dd>{{ data.pet.breed | orNA }}</dd>
                    </div>
                    <div class="about__detail">
                        <dt>Colour</dt>
                        <dd>{{ data.pet.colour | orNA }}</dd>
                    </div>
                    <div class="about__detail">
                        <dt>Gender</dt>
                        <dd>{{ data.pet.gender | orNA }}</dd>
                    </div>
                    {% if data.pet.neutered is defined %}
                    <div class="about__detail">
                        <dt>Neutered/Spayed</dt>
                        <dd>{{ 'Yes' if data.pet.neutered else 'No' }}</dd>
                    </div>
                    {% endif %}
                    {% if data.pet.insured is defined %}
                    <div class="about__detail">
                        <dt>Insured</dt>
                        <dd>{{ 'Yes' if data.pet.insured else 'No' }}</dd>
                    </div>
                    {% endif %}
                    {% if data.pet.microchipId %}
                    <div class="about__detail">
                        <dt>Microchip ID</dt>
                        <dd><code>{{ data.pet.microchipId }}</code></dd>
                    </div>
                    {% endif %}
                </dl>
            </div>

            <!-- Personality Card -->
            <div class="card about__personality">
                <h3 class="card__title">Personality</h3>
                <p>{{ data.pet.about.personality | orNA }}</p>
            </div>

            <!-- Favourites Card -->
            {% if data.pet.about.favourites %}
            <div class="card about__favourites">
                <h3 class="card__title">Favourites</h3>
                <div class="about__favourites-list">
                    {% for key, value in data.pet.about.favourites %}
                    {% if (value.join and value.length) or (not value.join and value) %}
                    <details class="about__favourite" open>
                        <summary class="about__favourite-summary">
                            <span class="about__favourite-title">{{ key | camelToTitleCase }}</span>
                        </summary>
                        <div class="about__favourite-details">
                            {% if value.join %}
                            <ul class="about__favourite-list">
                                {% for item in value %}
                                <li>{{ item | orNA }}</li>
                                {% endfor %}
                            </ul>
                            {% else %}
                            <p>{{ value | orNA }}</p>
                            {% endif %}
                        </div>
                    </details>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
            {% endif %}

            <!-- Quirks Card -->
            {% if data.pet.about.quirks | length %}
            <div class="card about__quirks">
                <h3 class="card__title">Quirks & Habits</h3>
                <ul class="about__quirks-list">
                    {% for quirk in data.pet.about.quirks %}
                    <li>{{ quirk }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            <!-- Daily Routine Card -->
            {% if data.pet.routine %}
            <div class="card about__routine">
                <h3 class="card__title">Daily Routine</h3>
                <ul class="about__routine-list">
                    {% for key, value in data.pet.routine %}
                    <li class="about__routine-item">
                        <span class="about__routine-time">{{ key | camelToTitleCase }}</span>
                        <span class="about__routine-activity">{{ value | orNA }}</span>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
        </div>
    </div>
</section>
