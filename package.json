{
  "name": "mocha",
  "version": "1.0.0",
  "description": "A dynamic site that generates a personalised profile for your beloved furry friend.",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && npm run js:build && npm-run-all --parallel eleventy:watch sass:watch js:watch",
    "build": "npm run clean && npm-run-all eleventy:build sass:build js:build",
    "build:docker": "npm run build",
    "eleventy:build": "eleventy",
    "eleventy:watch": "eleventy --serve --port ${PORT:-8080}",
    "sass:build": "sass src/assets/styles/main.scss dist/css/main.css --style=compressed --load-path=src/assets/styles",
    "sass:watch": "sass src/assets/styles/main.scss dist/css/main.css --watch --load-path=src/assets/styles",
    "js:build": "esbuild src/assets/scripts/main.js --bundle --minify --outfile=dist/js/main.js",
    "js:watch": "esbuild src/assets/scripts/main.js --bundle --outfile=dist/js/main.js --watch",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://git.moekai.net/irfan/mocha.git"
  },
  "keywords": [
    "cat",
    "dog",
    "pet",
    "profile",
    "eleventy",
    "website"
  ],
  "author": "Irfan Hakim <irfanhakim.as@yahoo.com> (https://links.irfanhak.im)",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "esbuild": "^0.21.5",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.77.6"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
